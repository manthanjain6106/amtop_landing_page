# Production Environment Configuration for AMTOP Landing Page
NODE_ENV=production

# Payload CMS Configuration
NEXT_PUBLIC_PAYLOAD_API_URL=https://payload-cms-sandy.vercel.app/api
PAYLOAD_API_URL=https://payload-cms-sandy.vercel.app/api

# Frontend Configuration
NEXT_PUBLIC_SITE_URL=https://amtop.com
NEXT_PUBLIC_APP_NAME=AMTOP
NEXT_PUBLIC_APP_DESCRIPTION=AI-Powered Business Automation Platform

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# Performance & Caching
NEXT_PUBLIC_CDN_URL=https://cdn.amtop.com
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# Security
NEXT_PUBLIC_CSP_NONCE=your-csp-nonce
NEXT_PUBLIC_HSTS_MAX_AGE=31536000

# External Services
NEXT_PUBLIC_CONTACT_EMAIL=contact@amtop.com
NEXT_PUBLIC_SUPPORT_EMAIL=support@amtop.com

# Feature Flags
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=true
